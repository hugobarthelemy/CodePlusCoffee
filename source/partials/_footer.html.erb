<div class="footer-navbar-container footer flex-end">
  <!-- ref to the modal -->
  <p class="text-center"><a data-toggle="modal" data-target="#LegalNoticeModal" role="button"><%= t "footer.btnmodal"%></a></p>

  <!-- Incidence.io -->
  <p><%= t "footer.powered" %><%= link_to "Incidence.io", "http://incidence.io", :target => "_blank" %></p>

</div>


<!-- Modal -->
  <div class="modal fade" id="LegalNoticeModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t "footer.legalnoticemodal.modalheader"%></h4>
        </div>
        <div class="modal-body">
          <p><%= t "footer.legalnoticemodal.textmodal"%></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "footer.legalnoticemodal.btnclose"%></button>
        </div>
      </div>

    </div>
  </div>


